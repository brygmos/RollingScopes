{
  "compilerOptions": {
    "outDir": "dist", //added by me
    "target": "esnext",
    "lib": ["dom", "esnext", "dom.iterable"],
    "jsx": "react-jsx", //changed by me
    //"jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,

    "useDefineForClassFields": true,
    "allowJs": true, //changed by me
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vitest/globals", "node", "jest", "@testing-library/jest-dom"]
  },
  "ts-node": { //added by me
    "esm": true,
    "experimentalSpecifierResolution": true,
  },
  "include": ["./src/**/*", "styled.d.ts", ".eslintrc.cjs", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
